{
    "manifest_version": 2,
    "name": "dress",
    "version": "2.0.1",
    "permissions": [ "activeTab", "tabs", "http://*/*", "https://*/*" ],
   "icons": {
      "128": "icon2.png",
      "16": "icon.png",
      "48": "icon2.png"
   },

   "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
   "content_scripts": [ {
      "css": [ "main.css" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "DRESS"
    }

}
